CREATE SEQUENCE SEQ_accounts START WITH 1 INCREMENT BY 1;
CREATE SEQUENCE SEQ_events START WITH 1 INCREMENT BY 1;



CREATE TABLE accounts(
    Id INTEGER NOT NULL Unique,
    nome VARCHAR (50) NOT NULL,
    email VARCHAR2 (50) NOT NULL PRIMARY KEY,
    Password VARCHAR2 (16) NOT NULL,
    birthdate varchar2(20) NOT NULL,
    carteira FLOAT,
    funcao varchar(10)
    );
    


CREATE TABLE events(
    Id integer not null,
    titulo varchar2 (50),
    descr varchar2 (150),
    data_aposta DATE,
    inicio varchar2(150),
    fim varchar2(150),
    valoraposta float,
    aprova varchar2(4),
    PRIMARY KEY (Id)
    );
drop TABLE events;
drop table accounts;


CREATE table aposta(
    Id_aposta int,
    email varchar2(10),
    valor   float,
    res varchar2(10),
    foreign key (email) references accounts(email),
    foreign key (Id_aposta) references events(Id),
    PRIMARY KEY (email, Id_aposta)
)


create or REPLACE FUNCTION calc_acerto
        (valor in number,carteira in number)
    return number
    is 
    begin 
        return(valor+carteira);
    end calc_acerto;






    
const express = require("express")
const app = express()

let date_time = new Date();

// get current date
// adjust 0 before single digit date
let date = ("0" + date_time.getDate()).slice(-2);

// get current month
let month = ("0" + (date_time.getMonth() + 1)).slice(-2);

// get current year
let year = date_time.getFullYear();

// get current hours
let hours = date_time.getHours();

// get current minutes
let minutes = date_time.getMinutes();

// get current seconds
let seconds = date_time.getSeconds();

// prints date in YYYY-MM-DD format
console.log(year + "-" + month + "-" + date);

// prints date & time in YYYY-MM-DD HH:MM:SS format
console.log(year + "-" + month + "-" + date + " " + hours + ":" + minutes + ":" + seconds);

